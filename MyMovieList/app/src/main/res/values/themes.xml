<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyMovieList" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/cardview_light_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.Theme.MyMovieList.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/cardview_light_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MyMovieList.SplashAnimation" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_mml</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MyMovieList</item>
    </style>
</resources>